<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginTop="-29dp"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:text="校园账单" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginTop="9dp"
        android:layout_centerHorizontal="true"
        android:text="记录每一笔花销，做好每一笔预算" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="更换手机号码"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="@color/bule" />
    <ImageView
        android:id="@+id/img_back1"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:background="@drawable/back"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"/>
    <EditText
        android:id="@+id/username2"
        android:layout_width="match_parent"
        android:layout_marginStart="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:hint="手机号"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true" />
    <requestFocus />

    <EditText
        android:id="@+id/confirm1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="300dp"
        android:hint="验证码" />
    <Button
        android:id="@+id/btn_confirm1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username2"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="-1dp"
        android:layout_toRightOf="@+id/confirm1"
        android:background="#00000000"
        android:text="获取验证码" />
    <Button
        android:id="@+id/btn_confirm2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="25sp"
        android:background="@drawable/confirm_button_selector"
        android:text="确认"
        android:layout_below="@+id/btn_confirm1"/>
</RelativeLayout>