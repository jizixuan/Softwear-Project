<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="修改密码"
            android:textSize="18sp"
            android:textColor="#000000"
            android:background="@color/bule" />

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@drawable/back"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-400dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="旧密码"/>

        <EditText
            android:id="@+id/edt_old_pwd"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_bg"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:textSize="20sp" />
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/hidepwd"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@mipmap/closeye" />
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:src="@mipmap/line"
            android:layout_below="@+id/edt_old_pwd"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="新密码"/>

        <EditText
            android:id="@+id/edt_new_pwd"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_bg"
            android:hint="6-16位的数字、字母组合"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:textSize="20sp" />
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/hidepwd1"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@mipmap/closeye" />
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:src="@mipmap/line"
            android:layout_below="@+id/edt_new_pwd"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="确认密码"/>

        <EditText
            android:id="@+id/edt_new_pwd1"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_bg"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:textSize="20sp" />
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/hidepwd2"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@mipmap/closeye" />
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:src="@mipmap/line"
            android:layout_below="@+id/edt_new_pwd1"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_confirm_new_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bule"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="确定"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"/>
</LinearLayout>